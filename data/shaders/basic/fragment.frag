//////////////////////////////////
/// Material structure.
//////////////////////////////////
struct Material
{
    lowp vec3  ambient;
    lowp vec4  diffuse;
    lowp vec3  specular;
    lowp float shininess;
};

//////////////////////////////////
/// Light structure.
//////////////////////////////////
struct Light
{
    lowp vec3 position;
    lowp vec3 direction;
    lowp vec3 colour;
};

//////////////////////////////////
/// Uniforms.
//////////////////////////////////
uniform lowp vec3 uAmbientLight;

//////////////////////////////////
/// Varying.
//////////////////////////////////
varying lowp vec4 vColor;

//////////////////////////////////
/// Main function.
//////////////////////////////////
void main() 
{
	gl_FragColor = vColor * vec4(uAmbientLight, 1.0);
}